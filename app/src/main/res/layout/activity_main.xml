<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Grid Overlay -->
    <com.example.cameracompositionapp.OverlayView
        android:id="@+id/overlayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ✅ ONLY THIS composition layout block should remain -->
    <LinearLayout
        android:id="@+id/compositionButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@id/captureButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/centralButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Central" />

        <Button
            android:id="@+id/ruleOfThirdsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rule of Thirds" />

        <Button
            android:id="@+id/diagonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagonal" />

        <Button
            android:id="@+id/btnGoldenRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Golden R" />

    </LinearLayout>

    <!-- Capture Button -->
    <Button
        android:id="@+id/captureButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text=""
        android:background="@drawable/capture_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

    <!-- Zoom In Button -->
    <Button
        android:id="@+id/zoomInButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+"
        android:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/captureButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Zoom Out Button -->
    <Button
        android:id="@+id/zoomOutButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="-"
        android:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/captureButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Flash Toggle Button -->
    <Button
        android:id="@+id/flashToggleButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="⚡"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
